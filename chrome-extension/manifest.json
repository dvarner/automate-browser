{
  "manifest_version": 3,
  "name": "Tab Session Exporter & Workflow Recorder",
  "version": "2.0.0",
  "description": "Export tabs and record browser workflows to YAML format",
  "permissions": [
    "tabs",
    "tabGroups",
    "downloads",
    "activeTab",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
